module-margin-right = 1

tray-offset-x = 0%
tray-offset-y = 0%
tray-maxsize = 18
tray-transparent = flase
tray-detached = false
tray-background = ${colors.background_i3wmthemer}

font-0 = Sauce Code Powerline:antialias=true:pixelsize=12
font-1 = SauceCodePro Nerd Font:antialias=true:pixelsize=18

modules-left = wifi-network volume
modules-center = i3
modules-right = xkeyboard battery0 battery1 date

tray-position = 
tray-padding = 15

wm-restack = i3 i3

[module/battery0]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
label-charging =%percentage%%
format-charging = %{A1:mate-power-statistics &:}<animation-charging> <label-charging>%{A}
format-charging-underline = ${colors.foreground_i3wmthemer}
format-discharging = %{A1:mate-power-statistics &:}<ramp-capacity> <label-discharging>%{A}
format-discharging-underline = ${colors.foreground_i3wmthemer}
label-discharging =%percentage%%
label-full = 
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
[module/battery1]
inherit = module/battery0
battery = BAT1

[module/wifi-network]
type = internal/network
interface = wlp3s0
accumulate-stats = true
label-connected =   %downspeed%  %upspeed%
label-disconnected =  wired
format-connected = %{A1:networkmanager_dmenu &:}<label-connected>%{A}
format-connected-underline = ${colors.color04_i3wmthemer}
format-disconnected = %{A1:networkmanager_dmenu &:}<label-disconnected>%{A}
format-disconnected-underline = ${colors.foreground_i3wmthemer}

[module/volume]
type = internal/volume
master-mixer = Master
format-volume = <ramp-volume> <label-volume>
