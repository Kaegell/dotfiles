ws-icon-8 = 9;
ws-icon-9 = 10;

label-focused = %icon%
label-unfocused = %icon%
label-urgent = %icon%
label-visible = %icon%

type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

workspace-label = %icon%
; pin-workspaces = true

label-mode-padding = 0
label-mode-foreground =  ${colors.foreground_i3wmthemer}
label-mode-background = ${colors.color04_i3wmthemer	}

; focused = Active workspace on focused monitor
; label-focused = %index%
label-focused-background = ${colors.background_i3wmthemer}
label-focused-foreground = ${colors.color04_i3wmthemer}
label-focused-underline = ${colors.color04_i3wmthemer}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
; label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}
label-unfocused-background = ${colors.background_i3wmthemer}
label-unfocused-foreground = ${colors.foreground_i3wmthemer}
label-unfocused-underline =

; visible = Active workspace on unfocused monitor
; label-visible = %index%
label-visible-background =
label-visible-foreground = ${colors.color04_i3wmthemer}
label-visible-underline = ${colors.color04_i3wmthemer}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
; label-urgent = %index%
label-urgent-background = ${colors.background_i3wmthemer}
label-urgent-foreground = ${colors.color02_i3wmthemer}
label-urgent-underline = ${colors.color02_i3wmthemer	}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground =  ${colors.foreground_i3wmthemer}
format-underline = ${colors.color04_i3wmthemer}

label = %date% %time%

